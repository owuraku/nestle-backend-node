{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"camelcase": "error",
		"max-lines": ["error", 150],
		"require-jsdoc": [
			"warn",
			{
				"require": {
					"FunctionDeclaration": true,
					"MethodDefinition": true,
					"ClassDeclaration": false,
					"ArrowFunctionExpression": true,
					"FunctionExpression": false
				}
			}
		]
	},
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest"
	}
}
